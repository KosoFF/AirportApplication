<Page
    x:Class="Airport.NewViews.ControlPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Airport.NewViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Light"
    DataContext="{Binding ControlViewModel, Source={StaticResource ViewModelLocator}}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" FontSize="16" Grid.ColumnSpan="2" Text="{Binding Username}"/>
            <Button BorderThickness="1" BorderBrush="Black" Grid.Row="2" Grid.ColumnSpan="2" Width="270" Height="30" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Center" Background="White" 
                    Content="Register passenger"  IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"
                    Command="{Binding RegisterPassengerCommand}"/>
            <Button BorderThickness="1" BorderBrush="Black" Grid.Row="3" Grid.ColumnSpan="2" Width="270" Height="30" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Center" Background="White" 
                    Content="Check in"  IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"
                    Command="{Binding CheckInCommand}"/>
            <Button BorderThickness="1" BorderBrush="Black" Grid.Row="4" Grid.ColumnSpan="2" Width="270" Height="30" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Center" Background="White" 
                    Content="Add aircraft"  IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"
                    Command="{Binding AddAircraftCommand}"/>
            <Button BorderThickness="1" BorderBrush="Black" Grid.Row="5" Grid.ColumnSpan="2" Width="270" Height="30" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Center" Background="White" 
                    Content="Add route"  IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"
                    Command="{Binding AddRouteCommand}"/>
            <Button BorderThickness="1" BorderBrush="Black" Grid.Row="6" Grid.ColumnSpan="2" Width="270" Height="30" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Center" Background="White" 
                    Content="Add flight"  IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"
                    Command="{Binding AddFlightCommand}"/>
            <Button BorderThickness="1" BorderBrush="Black" Grid.Row="7" Grid.ColumnSpan="2" Width="270" Height="30" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Center" Background="DarkGray" 
                    Content="Log out" IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"
                    Command="{Binding LogoutCommand}"/>
            
            <Image Source="../Assets/airplane62 — копия (2).png" Height="100" Grid.ColumnSpan="2" />
        </Grid>
    
</Page>
