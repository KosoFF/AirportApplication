<Page
    x:Class="Airport.NewViews.CheckInPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Airport.NewViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{Binding CheckInViewModel, Source={StaticResource ViewModelLocator}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1.5*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

       
        
        
        <Image  Grid.ColumnSpan="3" Grid.RowSpan="7" Source="../Assets/ManagerRegistrationPageBackground.png" Stretch="Fill"/>
        <TextBlock FontSize="18" Margin="5 0 0 10" Foreground="White" Grid.ColumnSpan="2" VerticalAlignment="Bottom" ><Run Text="Choose passenger"/></TextBlock>
        
        <Image Grid.Column="2"  Grid.Row="0" Source="../Assets/airplane62 — копия.png" Height="60" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 10 0" />
        <Button VerticalAlignment="Center" HorizontalAlignment="Right" Width="60" Height="60"  Opacity="0" Grid.ColumnSpan="3" Margin="0 0 10 0"  
                IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"/>
        
        <ListBox  HorizontalAlignment="Stretch" Grid.Row="3" VerticalAlignment="Stretch" Margin="5"
                  IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}" ItemsSource="{Binding PassengerDictionary}" DisplayMemberPath="Value"
                          SelectedValuePath="Key" SelectedValue="{Binding Passenger, Mode=TwoWay}"/>
        <ListBox HorizontalAlignment="Stretch" Grid.Row="3" Grid.Column="1"  VerticalAlignment="Stretch" Margin="5" 
                 IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}" ItemsSource="{Binding FlightDictionary}" DisplayMemberPath="Value"
                          SelectedValuePath="Key" SelectedValue="{Binding Flight, Mode=TwoWay}"/>

        <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Height="30"  >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="0.35*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="White" >Search:</TextBlock>
                <TextBox Grid.Column="1" Height="20" Margin="5 0 0 0"
                         IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"
                         Text="{Binding FlightSearchValue, Mode=TwoWay}"/>
                <Button Grid.Column="2" Height="20" Width="30" Background="White" HorizontalAlignment="Right" Margin=" 0 5 2.5 5"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"
                        Command="{Binding SearchCommand}">
                    <Image Source="../Assets/magnifying-glass16.png" Height="12"/>
                </Button>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*" />
                    <ColumnDefinition  Width="1*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.5*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="White" >Luggage:</TextBlock>

                <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                            <CheckBox Content="Y" FontSize="14" Foreground="White" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                      IsChecked="{Binding HasLuggage, Mode=TwoWay}"
                                      IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"/>
                            <CheckBox Content="N" FontSize="14" Foreground="White" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                      IsChecked="{Binding HasLuggage, Mode=TwoWay, Converter={StaticResource BooleanToNegationConverter}}"
                                      IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"/>
                     </Grid>
                </StackPanel>

                <TextBlock Grid.Column="2" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="White" >Weight:</TextBlock>

                <TextBox Grid.Column="3" Height="20" Margin="2.5" Text="{Binding Weight, Mode=TwoWay}"
                         IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"/>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Height="30" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.6*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="White" >Choose destination:</TextBlock>
                <ComboBox Grid.Column="1" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Width="155" Margin="0 5 5 0"
                          IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}" ItemsSource="{Binding CityDictionary}" DisplayMemberPath="Value"
                          SelectedValuePath="Key" SelectedValue="{Binding City, Mode=TwoWay}" />

            </Grid>
        </StackPanel>

        <Button Grid.Row="4" Grid.Column="0" Width="150" Height="30" FontSize="14" HorizontalAlignment="Center" Foreground="Black" Background="White" Margin="5 0 5 0" 
                Content="Create boarding pass" BorderThickness="1" BorderBrush="Black" Command="{Binding AddBoardingPassCommand}"
                IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"/>
        <Button Grid.Row="4" Grid.Column="1" Width="100" Height="30" FontSize="14" HorizontalAlignment="Center" Foreground="Black" Background="DarkGray" Margin="5 0 10 0" 
                Content="Cancel" BorderThickness="1" BorderBrush="Black" Command ="{Binding BackCommand}"
                IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"/>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <DatePicker Grid.Column="0" HorizontalAlignment="Right" IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"
                     Date="{Binding FlightDateTime, Mode=TwoWay }"/>
            <TimePicker Grid.Column="1" HorizontalAlignment="Left" IsEnabled="{Binding IsLoading, Converter={StaticResource BooleanToNegationConverter}}"
                     Time="{Binding FlightTime, Mode=TwoWay }"/>
        </Grid>

    </Grid>
</Page>
